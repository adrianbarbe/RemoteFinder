@model RemoteFinder.Models.UserSocial;
@{
    ViewData["Title"] = "Create Page";
}

<div class="container">
    <a href="@Url.Action("Index", "UserSocial")">< Back</a>
    @using (Html.BeginForm())
    {
        <div class="row">
            @Html.ValidationSummary(true)
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Field</th>
                    <th scope="col">Value</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Username</td>
                    <td>
                        @Html.EditorFor(model => model.Username)
                        @Html.ValidationMessageFor(model => model.Username)
                    </td>
                </tr>
                <tr>
                    <td>First Name</td>
                    <td>
                        @Html.EditorFor(model => model.FirstName)
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </td>
                </tr>
                <tr>
                    <td>Last Name</td>
                    <td>
                        @Html.EditorFor(model => model.LastName)
                        @Html.ValidationMessageFor(model => model.LastName)
                    </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <td>User Picture URL</td>
                    <td>
                        @Html.EditorFor(model => model.UserPicture)
                        @Html.ValidationMessageFor(model => model.UserPicture)
                    </td>
                </tr>
                </tbody>
            </table>

            <button class="btn btn-lg" type="submit">Save new</button>
        </div>
    }
</div>