@using RemoteFinder.Models
@{
    ViewData["Title"] = "List Page";
}

<div class="container">
    <div class="row">
        <a href="@Url.Action("Create", "Home")">Add New</a>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">File Name</th>
                <th scope="col">File Type</th>
                <th scope="col">File Size</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (File item in Model)
            {
                <tr>
                    <th>@item.Name</th>
                    <td>@item.FileName</td>
                    <td>@item.FileType</td>
                    <td>@item.FileSize</td>
                    <td>
                        <a href="@Url.Action("Details", "Home", new { id = item.Id })">View</a>
                        <a href="@Url.Action("Edit", "Home", new { id = item.Id })">Edit</a>
                        <a href="@Url.Action("Delete", "Home", new { id = item.Id })">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>